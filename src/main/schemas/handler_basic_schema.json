{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "handler basic schema",
    "type": "object",
    "properties": {
        "manifestId": {
            "type": "integer"
        },
        "type": {
            "type": "string",
            "enum": [
                "Generator",
                "Transporter",
                "DesignatedFacility",
                "Broker"
            ],
            "errorMessage": {
                "enum": "value must be Generator, Transporter, DesignatedFacility or Broker"
            }
        },
        "epaSiteId": {
            "type": "string",
            "minLength": 4,
            "maxLength": 15
        },
        "order": {
            "type": [
                "integer",
                "null"
            ],
            "minimum": 1
        },
        "name": {
            "type": "string",
            "maxLength": 80
        }
    },
    "required": [
        "manifestId",
        "type",
        "epaSiteId"
    ],
    "additionalProperties": true
}